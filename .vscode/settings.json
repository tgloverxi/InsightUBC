{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        }
    },
    "json.schemas": [
        {
            "fileMatch": [
                "/test/queries/**"
            ],
            "url": "/test/query.schema.json"
        }
    ],
    "eslint.enable": true,
    "eslint.validate": [
        "typescript"
    ]
}